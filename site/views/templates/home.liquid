{% layout "../layout/main.liquid" %}

{% block head %}
    <title>{{ home.seo.title }}</title>
{% endblock %}

{% block mainContent %}
    <div class="page-con">
        <div class="page-con__wrapper">
            <header class="page-con__header">
                <h1>{{ options.title }}</h1>
                <p>{{ options.subtitle }}</p>
            </header>
            <section class="page-con__main">
                <ul>
                    {% for row in home.rows %}
                        <li class="page-con__main__row">
                            <a href="{{ row.link }}">
                                <h2>
                                    {{ row.title }}
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z"/></svg>
                                </h2>
                                <p>{{ row.summary }}</p>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </section>
            <footer class="page-con__footer">
                <p>version {{ options.version }}</p>
            </footer>
        </div>
    </div>    
{% endblock %}

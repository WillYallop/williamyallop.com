{
  "name": "static-site-generator",
  "version": "1.0.0",
  "description": "This is a minimal, but very flexible and powerful static site generator that is built around Express and LiquidJS.",
  "main": "core/build.ts",
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:mix",
    "build": "npm-run-all --sequential build:wipe build:mix build:site",
    "dev:server": "ts-node-dev core/dev.ts",
    "dev:mix": "mix watch",
    "build:wipe": "ts-node core/util/wipe-dist.ts",
    "build:site": "ts-node core/build.ts",
    "build:mix": "mix --production"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cli-color": "^2.0.2",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/html-minifier-terser": "^7.0.0",
    "@types/lodash.merge": "^4.6.7",
    "@types/markdown-it": "^12.2.3",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.8",
    "axios": "^0.27.2",
    "cli-color": "^2.0.3",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "html-minifier-terser": "^7.0.0",
    "laravel-mix": "^6.0.49",
    "liquidjs": "^9.42.0",
    "lodash.merge": "^4.6.2",
    "markdown-it": "^13.0.1",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.54.8",
    "sass-loader": "^12.6.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  }
}
